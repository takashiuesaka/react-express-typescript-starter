{
  "name": "react-express-typescript-starter",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/takashiuesaka/react-express-typescript-starter.git",
  "author": "takashi uesaka <uesaka@nextscape.net>",
  "license": "MIT",
  "scripts": {
    "client": "webpack-dev-server --config ./config/webpack.config.dev.js --open --mode development",
    "build": "webpack --config ./config/webpack.config.js --mode production",
    "server": "nodemon --watch src/server --exec \"ts-node --project src/server/tsconfig.json src/server/server.ts\"",
    "dev": "cross-env NODE_ENV=development concurrently \"yarn client\" \"yarn server\"",
    "start": "cross-env NODE_ENV=production yarn build && yarn server",
    "lint:server": "eslint src/server --fix -c .eslintrc.server.json",
    "lint:client": "eslint src/client --fix -c .eslintrc.client.json"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "html-webpack-plugin": "^4.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "express": "^4.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}